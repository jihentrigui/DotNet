@model IEnumerable<Projet.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Article</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUnderWarranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
            @foreach (var article in Model)
            {
            <tr>
                <td>@article.Name</td>
                <td>@article.Category</td>
                <td>@article.Price</td>
                <td>@article.StockQuantity</td>
                <td>
                        @if (article.IsUnderWarranty)
                        {
                        <span class="badge bg-success">Under Warranty</span>
                        }
                        else
                        {
                        <span class="badge bg-danger">Out of Warranty</span>
                        }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.ArticleId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@article.ArticleId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@article.ArticleId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
    </tbody>

</table>
