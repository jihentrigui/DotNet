@model Projet.ViewModels.TechnicalInterventionViewModel

@{
    ViewData["Title"] = "Créer une intervention technique";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ClaimId">Réclamation</label>
        <select asp-for="ClaimId" asp-items="ViewBag.Claims" class="form-control">
            <option value="">Sélectionnez une réclamation</option>
        </select>
        <span asp-validation-for="ClaimId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="InterventionDate">Date de l'intervention</label>
        <input asp-for="InterventionDate" type="date" class="form-control" />
        <span asp-validation-for="InterventionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="LaborCost">Coût de la main d'œuvre</label>
        <input asp-for="LaborCost" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="LaborCost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SparePartIds">Pièces utilisées</label>
        <select asp-for="SparePartIds" asp-items="ViewBag.SpareParts" multiple class="form-control">
        </select>
        <span asp-validation-for="SparePartIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}